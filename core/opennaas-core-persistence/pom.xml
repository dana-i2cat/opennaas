<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>opennaas-core</artifactId>
		<groupId>org.opennaas</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>opennaas-core-persistence</artifactId>
	<packaging>bundle</packaging>
	<name>OpenNaaS :: Core :: JPA Persistence</name>
	<description>Dynamic JPA Persistence tools for Nexus</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.compendium</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-jpa_1.0_spec</artifactId>
		</dependency>
		<dependency>
			<groupId>org.dynamicjava.osgi</groupId>
			<artifactId>classloading-utils</artifactId>
		</dependency>
		<dependency>
			<groupId>org.dynamicjava.osgi</groupId>
			<artifactId>service-binding-utils</artifactId>
		</dependency>
		<dependency>
			<groupId>org.dynamicjava.osgi</groupId>
			<artifactId>dynamic-jpa</artifactId>
		</dependency>
		<dependency>
			<groupId>org.opennaas</groupId>
			<artifactId>opennaas-core-hibernate</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-beans</artifactId>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<!--
				| example additional resource entries, useful when building Eclipse
				RCP applications
			-->
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
					<include>plugin.properties</include>
					<include>icons/**</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.ops4j</groupId>
				<artifactId>maven-pax-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.5</version>
				<extensions>true</extensions>
				<configuration>
					<instructions><Bundle-SymbolicName>${project.artifactId}
						</Bundle-SymbolicName><Bundle-Version>${project.version}</Bundle-Version><Bundle-Activator>org.opennaas.core.persistence.Activator</Bundle-Activator><Import-Package>org.osgi.framework, javax.persistence, org.dynamicjava.osgi.service_binding_utils, org.dynamicjava.osgi.class
loading_utils, org.w3c.dom, javax.xml.parsers, org.slf4j;version="1.5.6", *</Import-Package>&gt;
						<Export-Package>org.opennaas.core.persistence.*;version="${project.version}"</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
