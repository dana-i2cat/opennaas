    <id>2</id>
    <pnodeID>-</pnodeID>
  </VNode>
  <VNode>
    <id>3</id>
    <pnodeID>-</pnodeID>
  </VNode>
  <VNode>
    <id>4</id>
    <pnodeID>-</pnodeID>
  </VNode>
  <VLink>
    <node1>0</node1>
    <node2>4</node2>
  </VLink>
  <VLink>
    <node1>1</node1>
    <node2>2</node2>
  </VLink>
  <VLink>
    <node1>1</node1>
    <node2>3</node2>
