<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
	<!--  	publish action set services  -->
	<bean id="connectionsActionSet" class="net.i2cat.luminis.actionsets.wonesys.ConnectionsActionSet"/>
	<!-- Register an Junos action factory as an OSGi Service -->
	<service ref="connectionsActionSet" interface="net.i2cat.nexus.resources.action.IActionSet">
		<service-properties>
			<!--  identify the junos actionset -->
			<entry key="actionset.name" value="proteus"/>
			<entry key="actionset.capability" value="connections"/>
			<entry key="actionset.version" value="1.0"/>
		</service-properties>
	</service>
	<!--  	publish action set services  -->
	<bean id="queueActionSet" class="net.i2cat.luminis.actionsets.wonesys.QueueActionSet"/>
	<!-- Register an Junos action factory as an OSGi Service -->
	<service ref="queueActionSet" interface="net.i2cat.nexus.resources.action.IActionSet">
		<service-properties>
			<!--  identify the junos actionset -->
			<entry key="actionset.name" value="proteus"/>
			<!--  queue have to be changed -->
			<entry key="actionset.capability" value="queue"/>
			<entry key="actionset.version" value="1.0"/>
		</service-properties>
	</service>
</blueprint>
