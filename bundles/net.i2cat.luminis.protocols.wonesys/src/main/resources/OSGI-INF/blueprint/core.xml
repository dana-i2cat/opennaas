<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
	
	<!-- Access wonesys devices through this protocol -->
	<bean id="wonesysProtocolSessionFactory" 
		class="net.i2cat.luminis.protocols.wonesys.WonesysProtocolSessionFactory"/>
	<service ref="wonesysProtocolSessionFactory"
		interface="net.i2cat.nexus.resources.protocol.IProtocolSessionFactory" >
		<service-properties>
			<entry key="protocol" value="wonesys" />
			<entry key="protocol.version" value="1.0.0" />
		</service-properties>
	</service>
	
	<!-- Configure reception of wonesys alarms -->
	<bean id="wonesysAlarmConfigurator" 
		class="net.i2cat.luminis.protocols.wonesys.alarms.WonesysAlarmConfigurator"/>
	<service ref="wonesysAlarmConfigurator"
		interface="net.i2cat.luminis.protocols.wonesys.alarms.IWonesysAlarmConfigurator" >
		<service-properties>
			<entry key="protocol" value="wonesys" />
			<entry key="protocol.version" value="1.0.0" />
		</service-properties>
	</service>
</blueprint>