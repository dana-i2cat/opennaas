<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>opennaas</id>

	<fileSets>
		<fileSet>
            <directory>src/main/filtered-resources</directory>
			<outputDirectory/>
			<filtered>true</filtered>
			<excludes>
				<exclude>bin/opennaas.sh</exclude>
			</excludes>
		</fileSet>
		<fileSet>
            <directory>src/main/filtered-resources</directory>
			<outputDirectory/>
			<filtered>true</filtered>
			<includes>
				<include>bin/opennaas.sh</include>
			</includes>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>target/system</directory>
			<outputDirectory>system</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/dependency/${servicemix.path}</directory>
			<outputDirectory/>
			<excludes>
				<exclude>bin/**</exclude>
				<exclude>examples/**</exclude>
				<exclude>etc/org.ops4j.pax.logging.cfg</exclude>
				<exclude>etc/org.apache.karaf.features.cfg</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/dependency/${servicemix.path}/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<excludes>
				<exclude>servicemix</exclude>
				<exclude>servicemix.bat</exclude>
			</excludes>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>

	<dependencySets>
		<dependencySet>
			<includes>
				<include>org.opennaas:karafbranding-opennaas:jar:*</include>
			</includes>
			<outputDirectory>lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
</assembly>
