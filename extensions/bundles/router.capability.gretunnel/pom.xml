<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>org.opennaas.extensions.bundles</artifactId>
    <groupId>org.opennaas</groupId>
    <version>0.10-SNAPSHOT</version>
  </parent>
  <artifactId>org.opennaas.extensions.router.capability.gretunnel</artifactId>
  <!--  Maven configuration -->
  <modelVersion>4.0.0</modelVersion>
  <packaging>bundle</packaging>
  <name>OpenNaaS :: Router :: GRE Tunnel Capability </name>
  <description>Routers GRE Tunnel Capability Implementation </description>
  <properties>
  	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
  <!-- mantychore dependencies -->
    <dependency>
	  <groupId>org.opennaas</groupId>
	  <artifactId>org.opennaas.core.resources</artifactId>
    </dependency>
    <dependency>
	  <groupId>org.opennaas</groupId>
	  <artifactId>org.opennaas.extensions.queuemanager</artifactId>
	</dependency>
	<dependency>
	  <groupId>org.opennaas</groupId>
	  <artifactId>org.opennaas.extensions.network.model</artifactId>
	</dependency>
	<dependency>
	  <groupId>org.opennaas</groupId>
	  <artifactId>org.opennaas.extensions.router.actionsets.junos</artifactId>
	</dependency>
	<!--  auxiliar methods to use with commands -->
	<dependency>
		<groupId>org.apache.karaf.shell</groupId>
	  <artifactId>org.apache.karaf.shell.console</artifactId>
	</dependency>
  </dependencies>
  <build>
	<resources>
	  <resource>
	    <directory>src/main/resources</directory>
	  </resource>
	</resources>
	<plugins>
	<plugin>
		<groupId>org.ops4j</groupId>
		<artifactId>maven-pax-plugin</artifactId>
	</plugin>
	<plugin>
	  <groupId>org.apache.felix</groupId>
	  <artifactId>maven-bundle-plugin</artifactId>
	  <extensions>true</extensions>
	  <!--
	  | the following instructions build a simple set of public/private
	  classes into an OSGi bundle
	  -->
		<configuration>
		  <instructions>
			<Bundle-Activator>org.opennaas.extensions.router.capability.gretunnel.Activator</Bundle-Activator>
			<!--
			| assume public classes are in the top package, and private
			classes are under ".internal"
			-->
			<Import-Package>
  			  org.slf4j,
			  org.apache.felix.service.command, <!--  necessary to do karaf commands -->
			  *
			</Import-Package>
			<Export-Package>
			  org.opennaas.extensions.router.capability.gretunnel;version="${project.version}"
			</Export-Package>
		  </instructions>
		</configuration>
	  </plugin>
	</plugins>
  </build>

</project>
