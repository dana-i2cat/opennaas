<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<groupId>net.i2cat.mantychore</groupId>
		<artifactId>itests-bundle-settings</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../..</relativePath>
	</parent>

  <groupId>org.opennaas.bod.itests-bundle-settings</groupId>
  <artifactId>org.opennaas.bod.tests</artifactId>
  <modelVersion>4.0.0</modelVersion>
  <name>org.opennass.bod.tests</name>
  <description>BoD Resource Integration Test</description>
  <packaging>jar</packaging>

  <dependencyManagement>
	  <dependencies>
		  <dependency>
			  <groupId>org.ops4j.pax.exam</groupId>
			  <artifactId>pax-exam</artifactId>
			  <version>${pax.exam2.version}</version>
		  </dependency>
	  </dependencies>
  </dependencyManagement>

  <dependencies>
	  <dependency>
		  <groupId>junit</groupId>
		  <artifactId>junit</artifactId>
		  <scope>test</scope>
	  </dependency>
	  <dependency>
		  <groupId>org.openengsb.labs.paxexam.karaf</groupId>
		  <artifactId>paxexam-karaf-container</artifactId>
		  <version>${paxexam-karaf-container.version}</version>
		  <scope>test</scope>
	  </dependency>
	  <dependency>
		  <groupId>org.ops4j.pax.exam</groupId>
		  <artifactId>pax-exam-junit4</artifactId>
		  <version>${pax.exam2.version}</version>
		  <scope>test</scope>
	  </dependency>

	  <dependency>
		  <groupId>net.i2cat.mantychore</groupId>
		  <artifactId>assembly</artifactId>
		  <version>${project.version}</version>
		  <type>zip</type>
		  <classifier>bin</classifier>
		  <scope>test</scope>
		  <exclusions>
			  <exclusion>
				  <groupId>org.apache.karaf.shell</groupId>
				  <artifactId>org.apache.karaf.shell.dev</artifactId>
			  </exclusion>
		  </exclusions>
	  </dependency>

	  <dependency>
		  <groupId>net.i2cat.nexus</groupId>
		  <artifactId>net.i2cat.nexus.tests.helper</artifactId>
		  <scope>test</scope>
		  <exclusions>
			  <exclusion>
				  <groupId>org.ops4j.pax.exam</groupId>
				  <artifactId>pax-exam-container-default</artifactId>
			  </exclusion>
			  <exclusion>
				  <groupId>org.ops4j.pax.exam</groupId>
				  <artifactId>pax-exam-junit</artifactId>
			  </exclusion>
			  <exclusion>
				  <groupId>org.apache.karaf.tooling</groupId>
				  <artifactId>org.apache.karaf.tooling.testing</artifactId>
			  </exclusion>
		  </exclusions>
	  </dependency>

	<dependency>
	  <groupId>org.opennaas</groupId>
	  <artifactId>opennaas-core-resources</artifactId>
	</dependency>
	<dependency>
		<groupId>org.opennaas.bod.capability</groupId>
  		<artifactId>org.opennaas.bod.capability.l2bod</artifactId>
	</dependency>
	<dependency>
		<groupId>org.opennaas</groupId>
		<artifactId>opennaas-core-protocols-sessionmanager</artifactId>
	</dependency>
  </dependencies>
  	<build>
	  <plugins>
		<plugin>
		  <groupId>org.apache.servicemix.tooling</groupId>
		  <artifactId>depends-maven-plugin</artifactId>
		  <executions>
		    <execution>
			  <id>generate-depends-file</id>
			  <goals>
			    <goal>generate-depends-file</goal>
			  </goals>
			</execution>
		  </executions>
		</plugin>
	  </plugins>
  </build>
</project>