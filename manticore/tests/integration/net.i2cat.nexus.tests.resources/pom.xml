	<modelVersion>4.0.0</modelVersion>
	<name>Nexus:: Integrations Resources Tests</name>
	<description>nexus resource integration test</description>
	<packaging>jar</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<paxexamversion>2.3.0.M1</paxexamversion>
		<paxrunnerversion>1.7.5</paxrunnerversion>
