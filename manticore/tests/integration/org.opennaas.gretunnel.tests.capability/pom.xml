<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>itests-bundle-settings</artifactId>
    <groupId>net.i2cat.mantychore</groupId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>
  <!--  POM id -->
  <groupId>net.i2cat.mantychore.itests-bundle-settings</groupId>
  <artifactId>org.opennaas.gretunnel.tests.capability</artifactId>
  <!--  Maven configuration -->
  <modelVersion>4.0.0</modelVersion>
  <name>GRE Tunnel capabilty test</name>
  <description>GRE Tunnel Capability Implementation test</description>  
  <packaging>jar</packaging>
  <dependencies>
	<dependency>
	  <groupId>net.i2cat.nexus</groupId>
	  <artifactId>net.i2cat.nexus.tests.helper</artifactId>
	  <version>1.0.0-SNAPSHOT</version>
	</dependency>
	<dependency>
	  <groupId>org.opennaas</groupId>
	  <artifactId>opennaas-core-resources</artifactId>
	  <version>1.0.0-SNAPSHOT</version>
	</dependency>
			<dependency>
			<groupId>org.opennaas</groupId>
			<artifactId>opennaas-core-protocols-sessionmanager</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
				<dependency>
			<groupId>net.i2cat.mantychore.model</groupId>
			<artifactId>net.i2cat.mantychore.model</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
	<dependency>
	  <groupId>net.i2cat.mantychore.queuemanager</groupId>
	  <artifactId>net.i2cat.mantychore.queuemanager</artifactId>
	  <version>1.0.0-SNAPSHOT</version>
	</dependency>
	<dependency>
	  <groupId>org.opennaas.gretunnel.capability</groupId>
	  <artifactId>org.opennaas.gretunnel.capability</artifactId>
	  <version>1.0.0-SNAPSHOT</version>
	</dependency>
	<dependency>
	  <groupId>net.i2cat.mantychore.actionsets</groupId>
	  <artifactId>net.i2cat.mantychore.actionsets.junos</artifactId>
	  <version>1.0.0-SNAPSHOT</version>
	</dependency>
  </dependencies>
  <build>
	<plugins>
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-surefire-plugin</artifactId>
		<version>2.4.3</version>
		<!--
        By default, the Surefire Plugin will automatically include all test classes with the following wildcard patterns:
        "**/Test*.java" - includes all of its subdirectory and all java filenames that start with "Test". "**/*Test.java" -
        includes all of its subdirectory and all java filenames that end with "Test". "**/*TestCase.java" - includes all of
        its subdirectory and all java filenames that end with "TestCase".
        -->
		<configuration>
	  	  <systemProperties>
			<property>
			  <name>protocol.uri</name>
			  <value>${protocol.uri}</value>
			</property>
		  </systemProperties>
		</configuration>
		</plugin>
		  <plugin>
		    <groupId>org.ops4j</groupId>
			<artifactId>maven-pax-plugin</artifactId>
			<!--
			| enable improved OSGi compilation support for the bundle
			life-cycle. | to switch back to the standard bundle life-cycle,
			move this setting | down to the maven-bundle-plugin section
			-->
			<extensions>true</extensions>
		</plugin>
		<plugin>
		  <groupId>org.apache.servicemix.tooling</groupId>
		  <artifactId>depends-maven-plugin</artifactId>
		  <executions>
			<execution>
			  <id>generate-depends-file</id>
			  <goals>
			    <goal>generate-depends-file</goal>
			  </goals>
			</execution>
		  </executions>
		</plugin>
	  </plugins>
	  <pluginManagement>
		<plugins>
		<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
		<plugin>
		  <groupId>org.eclipse.m2e</groupId>
		  <artifactId>lifecycle-mapping</artifactId>
		  <version>1.0.0</version>
		  <configuration>
		    <lifecycleMappingMetadata>
			  <pluginExecutions>
			    <pluginExecution>
				  <pluginExecutionFilter>
					<groupId>
					  org.apache.servicemix.tooling
					</groupId>
					<artifactId>
					  depends-maven-plugin
					</artifactId>
					<versionRange>
					  [1.2,)
					</versionRange>
					<goals>
					  <goal>
						generate-depends-file
					  </goal>
					</goals>
				  </pluginExecutionFilter>
				  <action>
					<ignore/>
				  </action>
				</pluginExecution>
			  </pluginExecutions>
			</lifecycleMappingMetadata>
		  </configuration>
		</plugin>
	  </plugins>
	</pluginManagement>
  </build>
</project>