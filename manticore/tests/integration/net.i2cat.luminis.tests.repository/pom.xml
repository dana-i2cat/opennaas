<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>net.i2cat.mantychore</groupId>
		<artifactId>mantychore-tests</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../..</relativePath>
	</parent>

	<groupId>net.i2cat.mantychore.itests-bundle-settings</groupId>
	<artifactId>net.i2cat.luminis.tests.ROADM.repository</artifactId>
	<modelVersion>4.0.0</modelVersion>
	<name>Luminis ROADM repository test</name>
	<description>Luminis ROADM repository test</description>
	<packaging>jar</packaging>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.ops4j.pax.exam</groupId>
				<artifactId>pax-exam</artifactId>
				<version>${pax.exam2.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.openengsb.labs.paxexam.karaf</groupId>
			<artifactId>paxexam-karaf-container</artifactId>
			<version>${paxexam-karaf-container.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam-junit4</artifactId>
			<version>${pax.exam2.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>net.i2cat.mantychore</groupId>
			<artifactId>assembly</artifactId>
			<version>${project.version}</version>
			<type>zip</type>
			<classifier>bin</classifier>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>org.apache.karaf.shell</groupId>
					<artifactId>org.apache.karaf.shell.dev</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>net.i2cat.nexus</groupId>
			<artifactId>net.i2cat.nexus.tests.helper</artifactId>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>org.ops4j.pax.exam</groupId>
					<artifactId>pax-exam-container-default</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.ops4j.pax.exam</groupId>
					<artifactId>pax-exam-junit</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.apache.karaf.tooling</groupId>
					<artifactId>org.apache.karaf.tooling.testing</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>org.opennaas</groupId>
			<artifactId>opennaas-core-resources</artifactId>
		</dependency>
		<dependency>
			<groupId>net.i2cat.luminis.ROADM.repository</groupId>
			<artifactId>net.i2cat.luminis.ROADM.repository</artifactId>
		</dependency>
		<!-- Capabilities of Mantychore need to change for capabilities of luminis ROADM -->
		<dependency>
			<groupId>net.i2cat.mantychore.queuemanager</groupId>
			<artifactId>net.i2cat.mantychore.queuemanager</artifactId>
		</dependency>
		<dependency>
			<groupId>net.i2cat.luminis.capability</groupId>
			<artifactId>net.i2cat.luminis.capability.connections</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.servicemix.tooling</groupId>
				<artifactId>depends-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>generate-depends-file</id>
						<goals>
							<goal>generate-depends-file</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
